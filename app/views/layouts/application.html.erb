<!DOCTYPE html>
<html>
  <head>
    <title>Roster</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>" role="alert"><%= value %></div>
    <% end %>
    
    <nav class="navbar navbar-default navbar-fixed-top navbar-transparent">
      <div class="container">
        <%= link_to "#" do %>
          <span><%#= image_tag "#", class: "navbar-brand" %></span>
        <% end %>
        <ul class="nav navbar-nav navbar-right">
          <% if logged_in? %>
            <li>
              <%= link_to new_department_path do %>
                <%= "部署登録" %>
              <% end %>
            </li>
            <li>
              <%= link_to new_nurse_work_schedule_path do %>
                <%= "勤務登録" %>
              <% end %>
            </li>
            <li>
              <%= link_to nurse_work_schedules_path do %>
                <%= "勤務表一覧" %>
              <% end %>
            </li>
            <li>
              <%= link_to new_nurse_path do %>
                <%= "職員登録" %>
              <% end %>
            </li>
            <li>
              <%= link_to nurses_path do %>
                <%= "職員一覧" %>
              <% end %>
            </li>
            <li>
              <%= link_to logout_path, method: :delete do %>
                <%= "ログアウト" %>
              <% end %>
            </li>
          <% else %>
            <li>
              <%= link_to "#" do %>
                <%#= image_tag "#" %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <%#= image_tag "#" %>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>

    <%= yield %>
    
    <script>
      $(function(){
        $(".alert").fadeOut(5000);
      });
    </script>

  </body>
</html>
