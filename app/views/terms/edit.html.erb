<div class="terms-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 terms-new-container">
        <h1 class="text-center text-white">雇用条件編集</h1>
        <h2 class="topic-author">
          <%= @nurse.name %>
        </h2>
        <%= form_for @term do |f| %>
          <div class="form-group">
            <%= f.label :"雇用形態", class: 'text-white' %>
            <%= f.select :employment, options_for_select_from_enum(Term, :employment), class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :"日勤", class: 'text-white' %>
            <%= f.select :day_shift, yes_no_select_option,class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :"夜勤", class: 'text-white' %>
            <%= f.select :night_shift, yes_no_select_option,class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :"夜勤明け", class: 'text-white' %>
            <%= f.select :after_night_shift, yes_no_select_option, class: 'form-control' %>
          </div>

          <%= f.submit "更新", class: 'btn-block btn-white' %>
        <% end %>
        <%= link_to '戻る', "#",class: 'text-white' %>
      </div>
    </div>
  </div>
</div>